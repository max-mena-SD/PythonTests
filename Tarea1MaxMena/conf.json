{
    "version": 1,
    "disable_existing_Loggers": false,
    "formatters": {
        "formato_info": { 
            "format":"[ %(asctime)s ] %(message)s"
        },
        "formato_error": {
            "format": "[ %(asctime)s ] %(funcName)s %(message)s %(lineno)d"
        },
        "formato_debug": {
            "format": "[ %(asctime)s ] %(funcName)s %(message)s %(lineno)d %(pathname)s"
        }
    },
    "handlers": {
        "manejador_info":{
            "level": "INFO",
            "filename": "logs/info.log",
            "formatter": "formato_info",
            "when": "midnight",
            "class": "logging.handlers.TimedRotatingFileHandler"
        },
        "manejador_error":{
            "level": "ERROR",
            "filename": "logs/error.log",
            "formatter": "formato_error",
            "when": "midnight",
            "class": "logging.handlers.TimedRotatingFileHandler"
        },
        "manejador_debug":{
            "level": "DEBUG",
            "filename": "logs/debug.log",
            "formatter": "formato_debug",
            "when": "midnight",
            "class": "logging.handlers.TimedRotatingFileHandler"
        }
    },
    "loggers":{
        "info": {
            "handlers": ["manejador_info"],
            "level": "INFO"
        },
        "error": {
            "handlers": ["manejador_error"],
            "level": "ERROR"
        },
        "debug": {
            "handlers": ["manejador_debug"],
            "level": "DEBUG"
        }
    }
}