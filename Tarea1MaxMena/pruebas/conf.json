{
    "version": 1,
    "disable_existing_Loggers": false,
    "formatters": {
        "formato_info": { 
            "format":"%(asctime)s, %(opcion)s, %(cantchar)s, %(funcName)s"
        }
    },
    "handlers": {
        "manejador_info":{
            "level": "INFO",
            "filename": "../logs/info.log",
            "formatter": "formato_info",
            "when": "midnight",
            "class": "logging.handlers.TimedRotatingFileHandler"
        }
    },
    "loggers":{
        "info": {
            "handlers": ["manejador_info"],
            "level": "INFO"
        }
    }
}